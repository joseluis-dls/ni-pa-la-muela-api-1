<link rel="stylesheet" href="/css/tableViewsReviews.css">
<link rel="stylesheet" href="/css/navbar.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&display=swap" rel="stylesheet">

<header class="header">

            <div class="logo">
                <a href="/"><p class="logo">Ni pa' la muela {API}</p></a>
            </div>
            <nav>
                <u1 class = "nav-links">
                    <li><a href="/restaurants">Agregar restaurante</a></li> 
                    <li><a href="/reviews">Editar reviews</a></li>   
                </u1>
            </nav>
       
</header>
<h1>Tabla de reviews</h1>

<a href="/reviews" class="aBackToAdd">Agrega una review</a>

<div class="tableOfReviewsDiv">
    <table>
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre del platillo</th>
            <th>Descripcion del platillo</th>
            <th>Restaurante</th>
            <th>Foto del platillo</th>
            <th>Precio</th>
            <th>Calificacion</th>
            <th>Opciones</th>
        </tr>
    </thead>

    <tbody>
        {{#each reviews}}
            <tr>
                <td>{{@index}}</td>
                <td>{{titleSaucer}}</td>
                <td>{{descriptionSaucer}}</td>
                <td>{{restaurant}}</td>
                <td><img class="imgTable" src={{photoOfSaucer}} alt=""></td>
                <td>${{priceOfSaucer}}</td>
                <td>{{calificationSaucer}} estrellas</td>
                <td>
                    <a href="/edit/{{_id}}" class="editButton">Editar</a>
                    <a href="/delete/{{_id}}" class="deleteButton">Eliminar</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

</div>
