<link rel="stylesheet" href="/css/tableViewsReviews.css">
<link rel="stylesheet" href="/css/navbar.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&display=swap" rel="stylesheet">

<header class="header">

            <div class="logo">
                <a href="/"><p class="logo">Ni pa' la muela {API}</p></a>            </div>
            <nav>
                <u1 class = "nav-links">
                    <li><a href="/restaurants">Agregar restaurante</a></li> 
                    <li><a href="/reviews">Editar reviews</a></li>   
                </u1>
            </nav>
       
</header>
<h1>Tabla de Restaurantes</h1>

<a href="/restaurants" class="aBackToAdd">Agrega un restaurante</a>

<div class="tableOfReviewsDiv">
    <table>
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre del restaurante</th>
            <th>Descripcion del restaurante</th>
            <th>descripcion corta</th>
            <th>Foto</th>
            <th>Calificacion</th>
            <th>link</th>
            <th>Link Mapa</th>
            <th>Opciones</th>
        </tr>
    </thead>

    <tbody>
        {{#each restaurant}}
            <tr>
                <td>{{@index}}</td>
                <td>{{nameRestaurant}}</td>
                <td>{{descriptionRestaurant}}</td>
                <td>{{shortDescriptionRestaurant}}</td>
                <td><img class="imgTable" src={{photoOfRestaurant}} alt=""></td>
                <td>{{calificationOfRestaurant}}</td>
                <td>{{linkResenas}} estrellas</td>
                <td>{{ubicationRestaurant}}</td>
                <td>
                    <a href="/restaurants/edit/{{_id}}" class="editButton">Editar</a>
                    <a href="/restaurants/delete/{{_id}}" class="deleteButton">Eliminar</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

</div>
