<link rel="stylesheet" href="/css/tableViewsReviews.css">
<link rel="stylesheet" href="/css/navbar.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&display=swap" rel="stylesheet">

<header class="header">

            <div class="logo">
                <a href="/"><img src="../public/img/logo.png" alt ="Logo del blog"/></a>
            </div>
            <nav>
                <u1 class = "nav-links">
                    <li><a href="/restaurants">Agregar restaurante</a></li> 
                    <li><a href="/reviews">Editar reviews</a></li>   
                </u1>
            </nav>
       
</header>
<h1>Tabla de contactos</h1>

<a href="/contacts" class="aBackToAdd">Agrega un contacto</a>

<div class="tableOfReviewsDiv">
    <table>
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre</th>
            <th>Github</th>
            <th>Linkedin</th>
            <th>Instagram</th>
            <th>Opciones</th>
        </tr>
    </thead>

    <tbody>
        {{#each contact}}
            <tr>
                <td>{{@index}}</td>
                <td>{{name}}</td>
                <td>{{github}}</td>
                <td>{{linkedin}}</td>
                <td>{{ig}}</td>
                <td>
                    <a href="/contacts/edit/{{_id}}" class="editButton">Editar</a>
                    <a href="/contacts/delete/{{_id}}" class="deleteButton">Eliminar</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

</div>
